<script src="~/layuiadmin/layui/layui.js"></script>
<script>
  layui.config({
    base: '../../layuiadmin/' //静态资源所在路径
  }).extend({
    index: 'lib/index' //主入口模块
  }).use(['index', 'user'], function(){
    var $ = layui.$
    ,setter = layui.setter
    ,admin = layui.admin
    ,form = layui.form
    ,router = layui.router()
    ,search = router.search;

    form.render();

    //提交
      form.on('submit(LAY-user-login-submit)', function (obj) {
          $.post("/Login/Login", { "username": obj.field.username, "password": obj.field.password }, function (data) {

              if (data > 0) {
                  ////请求成功后，写入 access_token
                  //layui.data(setter.tableName, {
                  //  key: setter.request.tokenName
                  //  ,value: res.data.access_token
                  //});

                  //登入成功的提示与跳转
                  layer.msg('登入成功', {
                      offset: '15px'
                      , icon: 1
                      , time: 1000
                  }, function () {
                      location.href = '/SQLManager/Admin'; //后台主页
                  });
              }
              else {
                  layer.msg("登录失败");
              }
          });
     
    });
  });
</script>